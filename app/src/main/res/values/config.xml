<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- App name as per the launcher -->
    <string name="app_name">Material You Adaptive for KWGT</string>

    <!-- Name of the skin to be shown inside the app, by default its the same as the app name -->
    <string name="kustom_pack_title">Material You Adaptive</string>

    <!-- A brief description of the pack contents -->
    <string name="kustom_pack_description">Material You Adaptive skins for KWGT</string>

    <!-- Title on the Tool Bar -->
    <string name="kustom_dashboard_title">@string/kustom_pack_title</string>

    <!-- Decides Weather Dark Or Light Theme Should Be Used -->
    <bool name="kustom_dashboard_light_theme">false</bool>

    <!-- Dark Theme Colors Change These If Dark Theme Is Enabled -->

    <!-- Accent color used for dialog buttons and navigation pager -->
    <color name="kustom_dashboard_dark_accent">#5f8fe7</color>
    <!-- Toolbar and preset card background color -->
    <color name="kustom_dashboard_dark_primary_dark">#222222</color>
    <!-- Main background for the app -->
    <color name="kustom_dashboard_dark_primary">#333333</color>
    <!-- Text used in toolbar and cards title -->
    <color name="kustom_dashboard_dark_primary_text">#FAFAFA</color>
    <!-- Text used in dialog text -->
    <color name="kustom_dashboard_dark_secondary_text">#EDEDED</color>

    <!-- Light Theme Colors Change These If Light Theme Is Enabled -->

    <!-- Accent color used for dialog buttons and navigation pager -->
    <color name="kustom_dashboard_light_accent">#ff6c6d</color>
    <!-- Toolbar and preset card background color -->
    <color name="kustom_dashboard_light_primary_dark">#404040</color>
    <!-- Main background for the app -->
    <color name="kustom_dashboard_light_primary">#E0E0E0</color>
    <!-- Text used in toolbar and cards title -->
    <color name="kustom_dashboard_light_primary_text">#303030</color>
    <!-- Text used in dialog text -->
    <color name="kustom_dashboard_light_secondary_text">#505050</color>

    <!-- Sets compact view as default -->
    <bool name="kustom_dashboard_compact_view">false</bool>

    <!--
    Enable or disable dynamic colors for the title and author in the preset / walls list
    When this is on a color is calculated based on the preview image, a dark bg is used when false
    -->
    <bool name="kustom_dashboard_adaptive_item_color">true</bool>

    <!-- Enable or disable Wallpapers support (you can also just leave the walls uri empty) -->
    <bool name="kustom_dashboard_walls">false</bool>

    <!-- Enable or disable Wallpapers download -->
    <bool name="kustom_dashboard_walls_download">true</bool>

    <!--
    URL to JSON file containing a map of wallpapers if enabled
    Format info can be found at https://kustom.rocks/apkmaker/walls/format
    Example https://kustom.rocks/apkmaker/walls
    This file can also be LOCAL, inside assets folder, or remote as an HTTP URL
    When local just use the file name relative to assets, so if the file is in assets/walls.json
    just use walls.json
    -->
    <!--suppress CheckTagEmptyBody -->
    <string name="kustom_dashboard_walls_url" formatted="false"></string>

    <!-- Translucent background colors used for wallpaper preview background and title -->
    <color name="kustom_translucent_background">#66000000</color>
    <color name="kustom_translucent_background_text_primary">#FFFFFF</color>
    <color name="kustom_translucent_background_text_secondary">#EEEEEE</color>
</resources>
